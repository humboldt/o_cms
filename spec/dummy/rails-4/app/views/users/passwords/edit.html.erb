<h1>Change your password</h1>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => "form-signin password-recovery" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, autofocus: true, autocomplete: "off" %>
  <%= f.input :password_confirmation, autocomplete: "off" %>
  <%= button_tag(type: 'submit', class: "btn btn-lg btn-primary btn-block") do %>
     Change my password
  <% end %>
<% end %>
