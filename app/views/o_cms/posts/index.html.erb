<%= render :partial => 'o_cms/posts/navigation' %>

<h2>Posts</h2>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td>
            <span class="tag tag-<%= post.status %>">
              <%= post.status.capitalize %>
            </span>
            <%= post.published_at.to_s(:short) if post.published_at.present?  %>
          </td>
          <td>
            <%= link_to edit_post_path(post), class:'btn btn-info btn-sm' do %>
              <i class="fa fa-mode-edit"></i> Edit
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
