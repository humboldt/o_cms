<%= render :partial => 'o_cms/images/modal' %>

<%= form_for @category do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(category.errors.count, "error") %>.</h4>
      <ul>
        <% category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(category.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: "Enter category name" %>
  <% end %>
  <%= form_group_tag(category.errors[:slug]) do %>
    <%= f.label :slug %>
    <%= f.text_field :slug, class: 'form-control', placeholder: "Enter category slug" %>
  <% end %>
  <%= form_group_tag(category.errors[:icon]) do %>
    <%= f.label :icon %>
    <%= f.text_field :icon, class: 'form-control', placeholder: "Enter category icon" %>
  <% end %>
  <%= form_group_tag(category.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.trix_editor :body, class: 'form-control category_body', placeholder: "Enter category body" %>
  <% end %>

  <div class="card">
    <div class="card-header">
      Search Engine Optimisation
    </div>
    <div class="card-block">
      <%= form_group_tag(category.errors[:meta_title]) do %>
        <%= f.label :meta_title %>
        <%= f.text_field :meta_title, class: 'form-control', placeholder: "Enter category meta title" %>
      <% end %>
      <%= form_group_tag(category.errors[:meta_description]) do %>
        <%= f.label :meta_description %>
        <%= f.text_area :meta_description, rows: 4, class: 'form-control', placeholder: "Enter category meta description" %>
      <% end %>
      <%= form_group_tag(category.errors[:meta_keywords]) do %>
        <%= f.label :meta_keywords %>
        <%= f.text_field :meta_keywords, class: 'form-control', placeholder: "Enter category meta keywords" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
