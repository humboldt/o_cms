<%= render :partial => 'o_cms/categories/navigation' %>

<h2>Categories</h2>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categorys.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.body.html_safe %></td>
          <td>
            <%= link_to edit_category_path(category), class:'btn btn-info btn-sm' do %>
              <i class="fa fa-mode-edit"></i> Edit
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
