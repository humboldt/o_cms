<%= render :partial => 'o_cms/pages/navigation' %>

<h2>Edit Page</h2>

<div class="row">
  <div class="col-md-4">
    <%= render :partial => 'guidelines' %>
  </div>
  <div class="col-md-8">
    <%= render partial: 'form', locals: { page: @page } %>
  </div>
  <div class="col-md-8 offset-md-4">
    <%= link_to page_path(@page), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-danger clear-right' do %>
      <i class="fa fa-delete-variant"></i> Delete
    <% end %>
  </div>
</div>
