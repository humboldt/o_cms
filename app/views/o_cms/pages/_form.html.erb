<%= form_for @page do |f| %>
  <% if page.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(page.errors.count, "error") %>.</h4>
      <ul>
        <% page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(page.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter page title" %>
  <% end %>
  <%= form_group_tag(page.errors[:slug]) do %>
    <%= f.label :slug %>
    <%= f.text_field :slug, class: 'form-control', placeholder: "Enter page slug" %>
  <% end %>
  <%= form_group_tag(page.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.trix_editor :body, rows: 8, class: 'form-control page_body', placeholder: "Enter page body" %>
  <% end %>
  <%= form_group_tag(page.errors[:excerpt]) do %>
    <%= f.label :excerpt %>
    <%= f.text_area :excerpt, rows: 8, class: 'form-control', placeholder: "Enter page excerpt" %>
  <% end %>
  <%= form_group_tag(page.errors[:featured_image]) do %>
    <%= f.label :featured_image %>
    <div class="input-group">
      <%= f.text_field :featured_image, class: 'form-control' %>
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="button">Select image</button>
      </span>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      Search Engine Optimisation
    </div>
    <div class="card-block">
      <%= form_group_tag(page.errors[:meta_title]) do %>
        <%= f.label :meta_title %>
        <%= f.text_field :meta_title, class: 'form-control', placeholder: "Enter page meta title" %>
      <% end %>
      <%= form_group_tag(page.errors[:meta_description]) do %>
        <%= f.label :meta_description %>
        <%= f.text_area :meta_description, rows: 8, class: 'form-control', placeholder: "Enter page meta description" %>
      <% end %>
      <%= form_group_tag(page.errors[:meta_keywords]) do %>
        <%= f.label :meta_keywords %>
        <%= f.text_field :meta_keywords, class: 'form-control', placeholder: "Enter page meta keywords" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
