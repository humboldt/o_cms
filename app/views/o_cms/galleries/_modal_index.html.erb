<div class="modal-body gallery-picker">
  <div class="alert alert-info">
    Select the gallery you would like to add.
  </div>

  <div class="list-group">
    <% galleries.each do |gallery| %>
      <%= link_to gallery_path(gallery), class: 'list-group-item list-group-item-action', remote: true do %>
        <%= gallery.name %>
      <% end %>
    <% end %>
  </div>
</div>
