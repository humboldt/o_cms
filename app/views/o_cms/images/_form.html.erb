<%= form_for @image do |f| %>
  <% if image.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(image.errors.count, "error") %>.</h4>
      <ul>
        <% image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(image.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter image name" %>
  <% end %>
  <%= form_group_tag(image.errors[:file]) do %>
    <%= f.label :file %>
    <%= f.file_field :file, class: 'form-control' %>
  <% end %>
  <%= form_group_tag(image.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter image description" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
